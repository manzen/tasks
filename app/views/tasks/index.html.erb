<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>分類</th>
      <th>タスク名</th>
      <th>期日</th>
      <th>優先度</th>
      <th>作業時間</th>
      <th>状態</th>
      <th>実施予定日</th>
      <th>完了日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.section.name %></td>
        <td><%= task.name %></td>
        <td><%= l(task.deadline, format: :long) %></td>
        <td><%= task.priority.name %></td>
        <td><%= task.work_time %></td>
        <td><%= task.state %></td>
        <td><%= l(task.implementation_scheduled_date, format: :long) %></td>
        <td><%= l(task.complete_scheduled_date, format: :long) %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規タスク', new_task_path %>
