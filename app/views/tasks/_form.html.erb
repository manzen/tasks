<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline, :minute_step => 10 %>
  </div>

  <div class="field">
    <%= f.label :work_time %>
    <%= f.number_field :work_time %>時間
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_area :state %>
  </div>

  <div class="field">
    <%= f.label :implementation_scheduled_date %>
    <%= f.date_select :implementation_scheduled_date %>
  </div>

  <div class="field">
    <%= f.label :complete_scheduled_date %>
    <%= f.date_select :complete_scheduled_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
