<p id="notice"><%= notice %></p>

<h1>書籍一覧</h1>

<table>
  <thead>
    <tr>
      <th>書籍名</th>
      <th>Url</th>
      <th>既読ページ数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.url %></td>
        <td><%= book.readed_page %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_book_path %>
