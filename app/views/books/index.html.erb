<p id="notice"><%= notice %></p>

<div class="container">
  <h1>書籍一覧</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>書籍名</th>
        <th>Url</th>
        <th>既読ページ数</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.url %></td>
          <td><%= book.readed_page %></td>
          <td><%= link_to '詳細', book, class: 'btn btn-info' %></td>
          <td><%= link_to '編集', edit_book_path(book), class: 'btn btn-primary' %></td>
          <td><%= link_to '削除', book, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規登録', new_book_path, class: 'btn btn-primary' %>
</div>