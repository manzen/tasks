<%= form_for(book) do |f| %>
    <div class="form-group">
      <% if book.errors.any? %>
          <ul>
            <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :url %>
        <%= f.text_area :url, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :readed_page %>
        <%= f.number_field :readed_page, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :section %>
        <%= f.collection_select :section_id, Section.all, :id, :name, {prompt: true}, {class: 'form-control input-width200'} %>
      </div>

      <div class="actions">
        <%= f.submit('登録する', class: 'btn btn-primary') %>
      </div>
    </div>
<% end %>
